{{#if authUser}}
<h3>Hi {{authUser.username}}! Here is {{picture.id}}</h3>
<div>
  <div>
    <img src="" alt="This is where the the picture goes">
  </div>
  <div>
    <div>
      <a href="/users/{{authUser.username}}/{{picture.id}}/edit">Edit</a>
    </div>
    <div>
    <form action="/users/{{authUser.username}}/{{picture.id}}/delete?_method=DELETE" method="POST">
        <button type="submit">delete</button>
      </form>
    </div>
  </div>
</div>
<div>
  <div>
    <a href="/users/{{authUser.username}}/new">Post a new picture</a>
  </div>
  <div>
    <a href="/users/{{authUser.username}}">Back to your gallery</a>
  </div>
  <div>
    <a href="/userlist">Back to Users</a>
  </div>
  <div>
    <a href="/">Back to Home</a>
  </div>
  <div>
    <a href="/logout">Logout</a>
  </div>
</div>
{{/if}}
{{#if user}}
<h3>Welcome to {{user.username}}'s gallery</h3>
<div>
  <div>
    <a href="/users/{{user.username}}/{{picture.id}}">
      {{id}}
      <img src="" alt="This is where the the picture goes">
    </a>
  </div>
</div>
<div>
  <div>
    <a href="/userlist">Back to Users</a>
  </div>
  <div>
    <a href="/">Back to Home</a>
  </div>
  <div>
    <a href="/login">Login</a>
  </div>
  <div>
    <a href="/register">Create an account</a>
  </div>
</div>
{{/if}}
